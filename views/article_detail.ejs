<body>
    <!--头部开始-->
    <% include header.ejs %>
    <!--头部结束-->

    <div class="container">
        <div class="row">
            <!--左侧作者详情 start-->
            <div class="left-author col-md-2 hidden-sm hidden-xs">
                <div class="about-author clearfix">
                    <div class="author-img pull-left">
                        <img class="img-thumbnail" src="/img/article/logo.png" alt="Jeson"/>
                    </div>
                    <p class="pull-right">
                        <a href="">
                            <h4 class="name">Jeson</h4>
                        </a>
                    <div class="author-info">
                        <span class="time">2016年2月6日</span>
                        <i class="icon-heart-empty" data-toggle="tooltip" title="关注" data-placement="top"></i>
                    </div>
                    </p>
                </div>
                <div class="author-article">
                    <h4 class="similar-title">同类型还发布了 <span class="more pull-right">More</span></h4>
                    <ul>
                        <%if(locals.author){%>
                            <%for(let i=0;i<author.length;i++){%>
                            <li><a href="/article_detail/<%= author[i]['id']%>.html" class="text-overflow"><%= author[i]['title']%></a></li>
                            <%}%>
                        <%}else{%>
                        <li><a href="#" class="text-overflow">暂未发布其它文章</a></li>
                        <%}%>
                    </ul>
                </div>
                <div class="author-like">
                    <h4 class="similar-title">他的爱好</h4>
                    <ul class="like-detail">
                        <li>前端</li>
                        <li>新奇</li>
                    </ul>
                </div>
            </div>
            <!--end 左侧作者详情-->

            <!--内容部分 start-->
            <div class="content col-md-8 col-sm-12">
                <div class="article-detail-con1 padding-right-13">
