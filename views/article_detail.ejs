                            </div>
                        </div>
                        <!--end 文章标签-->

                        <!--同类文章 start-->
                        <%if(locals.more){%>
                        <div class="article-similar padding-left-13 padding-right-13 hidden-xs">
                            <h4 class="similar-title">相同类型文章</h4>
                            <ul class="similar-ul clearfix">
                                <%for(let i=0;i<data3.length;i++){%>
                                <li class="col-md-4 col-sm-6 col-xs-12">
                                    <a href="/article_detail/<%= data3[i]['id'] %>.html">
                                        <img src="<%= data3[i]['cover'] %>" alt="s1" style="width:100%;height:100%;"/>
                                        <p><%= data3[i]['title'] %></p>
                                    </a>
                                </li>
                                <%}%>
                            </ul>
                        </div>
                        <%}%>
                        <!--end 同类文章-->

                        <!--评论开始-->
                        <div class="send_comment">
                            <% if(locals.login) {%>
                                <em class="avatar"><img src="<%= data[0]['avatar'] %>" alt="avatar"></em>
                                <form action="/article_detail/<%= data[0]['id'] %>.html" method="post" class="clearfix">
                                    <textarea name="commentcon" id="recomment" cols="5" rows="5"></textarea>
                                    <button type="submit" class="btn btn-success">发表</button>
                                </form>
                            <%}else{%>
                            <em class="avatar"><img src="/img/avatar_logout.jpg" alt="avatar"></em>
                            <div class="logout-cover">
                                <div class="login-point">
                                    <button class="btn btn-success"><a href="/login">登录</a></button>
                                    后发表评论
                                </div>
                            </div>
                            <%}%>

                        </div>
                        <div class="comment-show">

                            <%if(commentData){%>  <!--存在评论才开始循环-->
                                <div class="com-s-title">
                                    <span>0条评论</span>
                                    <button class="btn btn-default btn-sm">只看作者</button>
                                    <div class="pull-right">
                                        <ul class="item clearfix">
                                            <li>按喜欢排序</li>
                                            <li>按时间排序</li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                                <% for(let i in commentData){ %>
