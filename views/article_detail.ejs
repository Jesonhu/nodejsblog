                    <!--<ul class = "breadcrumb hidden-xs">
                        <li><i class = "glyphicon glyphicon-home padding-right-13"></i><a href="javascript:void(0);">首页</a></li>
                        <li><a href="javascript:void(0);">分类1</a></li>
                        <li><a href="javascript:void(0);" class="active">人文</a></li>
                    </ul>-->
                    <!--end 面包屑导航-->


                    <div class="article-wrap">
                        <!--文章正文 start-->
                        <h1 class="padding-13 article" data-id="<%= data[0]['id'] %>"><%= data[0]['title'] %></h1>
                        <div class="padding-13 public">
                            <a href="">
                                <img class="img-circle" src="<%= data[0]['avatar'] %>" alt="avatar"/>
                                <span class="public-author"><%= data[0]['author'] %></span>
                            </a>
                            <span class="public-time"><%= data[0]['time'] %></span>
                        <span class="public-view pull-right" data-toggle="tooltip" title="浏览" data-placement="top">
                            <i class=" icon-eye-open"></i>
                            <em class="like-num"><%= data[0]['view'] %></em>
                        </span>
                        <span class="public-like pull-right" data-toggle="tooltip" title="收藏" data-placement="top">
                            <i class="icon-heart-empty"></i>
                            <em class="like-num"><%= data[0]['store'] %></em>
                        </span>
                        </div>
                        <div class="article-summary">
                            <p><%= data[0]['summary'] %></p>
                            <em class="a-s-square left"></em>
                            <em class="a-s-square right"></em>
                        </div>
                        <div class="article-detail padding-13">
                            <p><%- data[0]['content'] %></p>
                        </div>

                        <!--end 文章正文-->

                        <!--文章标签 start-->
                        <div class="article-mark padding-13 clearfix">
                            <div class="mark-left pull-left" data-toggle="tooltip" title="标签" data-placement="top">
                                <i class="icon icon-bookmark"></i>
                                <span><%= data[0]['tag'] %></span>
                            </div>
