<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
    <title>文章列表-</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/article-list.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.cookie.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/article.js"></script>
</head>
<body>
    <!--头部开始-->
        <% include header.ejs %>
    <!--头部结束-->

    <div class="container">
        <div class="row">
            <!-- 左侧分类开始 -->
            <div class="col-md-2 hidden-sm hidden-xs">
                <!-- nav start -->
                <div class="row">
                    <div class="navwrap">
                    <!-- panel start -->

                    <div class="panel">
                        <div class="panel-heading active">
                            <a data-target="#sub-nav1" data-toggle="collapse" data-parent=".navwrap">
                                <i class="icon-globe"></i>前端
                            </a>
                        </div>
                        <div class="panel-body collapse in" id="sub-nav1">
                            <ul>
                                <li><a href="/article_list/1/1.html">html+css</a></li>
                                <li><a href="/article_list/2/1.html">html5</a></li>
                                <li><a href="/article_list/4/1.html">css3</a></li>
                                <li><a href="/article_list/5/1.html">js</a></li>
                                <li><a href="/article_list/6/1.html">jquery</a></li>
                                <li><a href="/article_list/7/1.html">angularjs</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-heading">
                            <a data-target="#sub-nav2" data-toggle="collapse" data-parent=".navwrap">
                                <i class="icon-globe"></i>后端
                            </a>
                        </div>
                        <div class="panel-body collapse" id="sub-nav2">
                            <ul>
                                <li><a href="/article_list/8/1.html">nodeJS</a></li>
                                <li><a href="">mySql</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- end panel -->
                </div>
                </div>
                <!-- end nav -->
            </div>
            <!-- 左侧分类结束 -->

            <!-- 内容区域开始 -->
            <div class="con-wrap col-md-10 article-list">
                <div class="row">
                    <div class="col-md-9">
                        <!--面包屑导航 start-->
                        <ul class = "breadcrumb hidden-xs">
                            <li><i class = "glyphicon glyphicon-home padding-right-13"></i><a href="/">首页</a></li>
                            <li data-type="<%= locals.type %>"><a href="javascript:void(0);" class="active">人文</a></li>
                        </ul>
                        <!--end 面包屑导航-->
                        <!-- 文章分类 -->
                        <!-- 文章列表 -->
                        <div class="article-list-wrap">
                            <div class="article-list">
                                <!-- all start -->
                                <ul class="media-list active">
                                    <% for(let i in data){ %>
                                    <li class = "media">
                                        <a class = "pull-left" href = "javascript:void(0)">
                                            <img class = "media-object"  src = "<%= data[i]['cover'] %>" alt="1" width="100%" height="100%" />
                                        </a>
                                        <div class = "media-body">
                                            <a href="/article_detail/<%= data[i]['id'] %>.html">
                                                <h3 class = "media-heading"><%= data[i]['title'] %></h3>
                                            </a>
                                            <div class="detail"><%= data[i]['summary'] %>。</div>
                                            <div class="public">
                                                <a href="article-detail.html">
                                                    <img class="img-circle" src="<%= data[i]['avatar'] %>" alt="logo"/>
                                                    <span class="public-author"><%= data[i]['author'] %></span>
                                                </a>
                                                <span class="public-time"><%= data[i]['time'] %></span>
                                            <span class="public-like pull-right" href="">
                                                <i class="icon-heart-empty"></i>
                                                <em class="like-num"><%= data[i]['store'] %></em>
                                            </span>
                                            </div>
                                        </div>
                                    </li>
                                    <% } %>
                                </ul>
                                <!-- end all -->

                            </div>
                            <div class="pagination">
                                <ul>
                                    <!--<li><a href="#">上一页</a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">下一页</a></li>-->
                                    <% for(var i=0;i< locals.all/5 ;i++){ %>
                                    <li>
                                        <a href="/article_list/<%= locals.type %>/<%= i+1 %>.html"> <%= i+1 %></a>
                                    </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!--右侧最新文章开始-->
                    <div class="col-md-3 visible-lg">
                        <div class="con-new-list-title">
                            最新文章
                        </div>
                        <div class="time"><%= data5[0]['time']%></div>
                        <ul>
                            <li class="new-list-li active" title="点击浏览摘要">
                                <a href="/article_detail/<%= data5[0]['id']%>.html"><h4><%= data5[0]['title']%></h4></a>
                                <div class="new-list-content"><%= data5[0]['summary']%></div>
                            </li>
                        </ul>
                        <div class="time"><%= data5[1]['time']%></div>
                        <ul>
                            <%for(let i=1;i<data5.length;i++){%>
                            <li class="new-list-li" title="点击浏览摘要">
                                <a href="/article_detail/<%= data5[i]['id']%>.html"><h4><%= data5[i]['title']%></h4></a>
                                <div class="new-list-content"><%= data5[i]['summary']%></div>
                            </li>
                            <%}%>
                        </ul>
                    </div>
                    <!--右侧最新文章结束-->
                </div>
            </div>
            <!-- 内容区域结束 -->
        </div>
    </div>

    <!--底部开始-->
        <% include footer.ejs %>
    <!--底部结束-->

</body>
</html>