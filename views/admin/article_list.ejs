<div class="content col-md-8">

    <div class="header">

        <h1 class="page-title">文章管理</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="/admin">首页</a></li>
        <li class="active">文章管理</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="btn-toolbar">
                <a href="/admin/article">
                <button class="btn btn-primary"><i class="fa fa-plus"></i>添加新文章</button>
                </a>
                <!--<button class="btn">Import</button>
                <button class="btn">Export</button>-->
                <div class="btn-group">
                </div>
            </div>
            <div class="well">
                <table class="table">
                    <thead>
                    <tr>
                        <th>文章标题</th>
                        <th>发布时间</th>
                        <th>收藏次数</th>
                        <th>操作</th>
                        <th style="width: 26px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i in data){ %>
                    <tr>
                        <td><%= data[i]['title']  %></td>
                        <td class="admin"><%= data[i]['time']  %></td>
                        <td><%= data[i]['store']  %></td>
                        <td>
                            <a href="/admin/article/updatearticle/<%= data[i]['id'] %>"><i class="fa fa-pencil"></i>修改</a>
                            <a href="#myModal" role="button" data-toggle="modal" data-target="#myModal1" data-id="<%= data[i]['id']  %>" class="arcdelete">
                                <i class="fa fa-remove"></i>删除
                            </a>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                <ul>
                    <% for(let i=0;i<locals.all/5;i++){ %>
                    <li><a href="/admin/article_list/<%= i+1 %>.html"><%= i+1 %></a></li>
                    <%}%>
                </ul>
            </div>

        </div>
    </div>
</div>


<!-- 删除模态框-Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">删除提示</h4>
            </div>
            <div class="modal-body">
                确认要删除这个用户吗？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <button type="submit"  class="btn btn-primary  delete" data-dismiss="modal">确定</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $("[rel=tooltip]").tooltip();
    $(function() {
        $('.demo-cancel-click').click(function(){return false;});
    });
</script>
<script src="/js/article.js"></script>

